@using PhPopovich.Models
@inject Context DbContext

@{
    Layout = null;
}

<div class="container" id="order">
    <h3 class="title">Заказать фотосессию</h3>
    <form>
        <div class="form-group">
            <label for="phoneOrEmail">Телефон или email</label>
            <input type="text" class="form-control" id="phoneOrEmail" placeholder="Телефон или email">
        </div>
        <div class="form-group">
            <label for="name">Имя Фамилия</label>
            <input type="text" class="form-control" id="name" placeholder="Имя Фамилия">
        </div>
        <div class="container">
            <div class="row">
                <div class='col-sm-6'>
                    <input type='text' class="form-control" id='datetimepicker45555'/>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker45555').datetimepicker();
                    });
                </script>
            </div>
        </div>
        <div class="form-group">
            <label for="desireDate">Желаемая дата</label>
            <input type="text" class="form-control" id="desireDate" placeholder="Желаемая дата"/>
            <script type="text/javascript">
                $(function () {
                    $('#desireDate').datetimepicker();
                });
            </script>
        </div>
        <div class="form-group">
            <label for="whatYouWant">Опишите чтобы вы хотели</label>
            <textarea class="form-control" id="whatYouWant" rows="4" placeholder="Опишите чтобы вы хотели"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Заказать</button>
    </form>
</div>